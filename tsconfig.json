{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "sourceRoot": "./src"
  },
  "exclude": [
    "node_modules", "dist"
  ],
  "include": ["src/**/*", "config"]
}